{% include 'includes/header.twig' %}
<body class="bg-gradient-to-r from-purple-500 to-blue-500">
<nav class="bg-opacity-80 p-4">
    <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-4xl font-bold text-white"><a href="/episodes">R&M Episodes</a></h1>
        {% include 'includes/weather.show.twig' %}

        <div class="relative flex ml-auto">
            {% include 'includes/weather.set.twig' %}

            {% include 'includes/episode.search.twig' %}
        </div>
    </div>
</nav>
{% if episodes is empty %}
    <div class="flex items-center justify-center w-3/5 mx-auto p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400"
         role="alert">
        <span class="font-medium">Nothing found! Try again.</span>
    </div>
{% endif %}
<div class="container mx-auto p-6">
    <div class="text-xl text-white grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for episode in episodes %}
            <a href="/episode/{{ episode.id }}">
                <div class="bg-white text-black rounded-lg cursor-pointer transform hover:scale-105 transition duration-300">
                    <div class="p-4">
                        <div class="text-lg text-center">{{ episode.name }}</div>
                        <div class="text-center">{{ episode.episode }}</div>
                        <div class="text-sm italic text-center">{{ episode.airDate | date("F d, Y") }}</div>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>

{% include 'includes/footer.twig' %}
